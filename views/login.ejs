<body>
    <section class="auth-layout">
        <div class="card">
            <div class="form-wrap">
                <!-- Logo/Marca -->
                <div style="text-align: center; margin-bottom: 28px;">
                    <h1 class="auth-brand" style="margin-bottom: 8px;">üè® Hotel Flamingo</h1>
                    <p class="form-sub" style="margin: 0;">Tu hotel de confianza para hospedarte</p>
                </div>

                <h2 class="form-title">Iniciar Sesi√≥n</h2>
                <p class="form-sub">Accede a tu cuenta para gestionar tus reservas</p>

                <form action="/auth/login" method="POST" class="form">
                    <div>
                        <label for="email" class="label">üìß Correo Electr√≥nico</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="input" 
                            placeholder="tu@email.com" 
                            required
                            autocomplete="email"
                        >
                    </div>

                    <div>
                        <label for="contrasena" class="label">üîê Contrase√±a</label>
                        <input 
                            type="password" 
                            id="contrasena" 
                            name="contrasena" 
                            class="input" 
                            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" 
                            required
                            autocomplete="current-password"
                        >
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Iniciar Sesi√≥n</button>
                    </div>
                </form>

                <!-- Mensajes de error o √©xito -->
                <% if (typeof error !=='undefined' && error) { %>
                    <div class="error mt-16">
                        ‚ö†Ô∏è <%= error %>
                    </div>
                <% } %>

                <% if (typeof mensaje !=='undefined' && mensaje) { %>
                    <div class="success mt-16">
                        ‚úì <%= mensaje %>
                    </div>
                <% } %>

                <!-- Link a registro -->
                <!-- Link a registro -->
                <div style="text-align: center; margin-top: 24px; padding-top: 24px; border-top: 1px solid var(--border);">
                    <p class="help" style="margin: 0 0 8px 0;">¬øNo tienes una cuenta?</p>
                    <a href="/auth/registro" style="font-size: 1.05rem;">Crea tu cuenta ahora</a>
                </div>

